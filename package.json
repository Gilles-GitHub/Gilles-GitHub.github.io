{
  "name": "portfolio",
  "version": "1.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "lint": "ng lint",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test portfolio",
    "test:ci": "ng test --ci=true --reporters=default --coverage=true",
    "e2e": "pnpm playwright test --config=e2e/playwright.config.ts",
    "prepare": "husky install"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^14.2.5",
    "@angular/common": "~14.2.5",
    "@angular/compiler": "~14.2.5",
    "@angular/core": "~14.2.5",
    "@angular/forms": "~14.2.5",
    "@angular/platform-browser": "~14.2.5",
    "@angular/platform-browser-dynamic": "~14.2.5",
    "@angular/router": "~14.2.5",
    "marked": "^4.1.1",
    "ngx-markdown": "^14.0.1",
    "primeicons": "^6.0.1",
    "primeng": "^14.1.2",
    "prismjs": "^1.29.0",
    "rxjs": "~6.6.0",
    "source-map-support": "0.5.21",
    "tslib": "^2.4.0",
    "zone.js": "~0.11.8"
  },
  "devDependencies": {
    "@angular-builders/jest": "^14.0.1",
    "@angular-devkit/build-angular": "~14.2.5",
    "@angular-eslint/builder": "14.1.2",
    "@angular-eslint/eslint-plugin": "14.1.2",
    "@angular-eslint/eslint-plugin-template": "14.1.2",
    "@angular-eslint/schematics": "^14.1.2",
    "@angular-eslint/template-parser": "14.1.2",
    "@angular/cli": "~14.2.5",
    "@angular/compiler-cli": "~14.2.5",
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@playwright/test": "^1.27.0",
    "@types/jest": "^27.4.1",
    "@types/node": "^12.11.1",
    "@typescript-eslint/eslint-plugin": "5.39.0",
    "@typescript-eslint/parser": "5.39.0",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "jest-preset-angular": "^12.2.2",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "prettier-eslint": "^15.0.1",
    "ts-jest": "^28.0.8",
    "typescript": "~4.6.4"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --cache --fix"
    ],
    "src/**/*.{css,scss,json,js,ts,html}": [
      "prettier ---write --ignore-unknown"
    ]
  },
  "resolutions": {
    "d3-color": "^3.1.0"
  }
}

{
  "name": "portfolio",
  "version": "1.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "lint": "ng lint",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test --maxWorkers=1",
    "test:ci": "ng test -- --ci --reporters=default --coverage",
    "e2e": "pnpm playwright test --config=e2e/playwright.config.ts",
    "e2e:debug": "PWDEBUG=1 pnpm playwright test --config=e2e/playwright.config.ts --reporter=html",
    "prepare": "husky install"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^13.3.5",
    "@angular/common": "~13.3.5",
    "@angular/compiler": "~13.3.5",
    "@angular/core": "~13.3.5",
    "@angular/forms": "~13.3.5",
    "@angular/platform-browser": "~13.3.5",
    "@angular/platform-browser-dynamic": "~13.3.5",
    "@angular/router": "~13.3.5",
    "marked": "^4.0.14",
    "ngx-markdown": "^13.1.0",
    "primeicons": "^5.0.0",
    "primeng": "^13.3.3",
    "prismjs": "^1.28.0",
    "rxjs": "~6.6.0",
    "source-map-support": "0.5.21",
    "tslib": "^2.1.0",
    "zone.js": "~0.11.5"
  },
  "devDependencies": {
    "@angular-builders/jest": "^13.0.3",
    "@angular-devkit/build-angular": "~13.3.4",
    "@angular-eslint/builder": "13.2.1",
    "@angular-eslint/eslint-plugin": "13.2.1",
    "@angular-eslint/eslint-plugin-template": "13.2.1",
    "@angular-eslint/schematics": "13.2.1",
    "@angular-eslint/template-parser": "13.2.1",
    "@angular/cli": "~13.3.4",
    "@angular/compiler-cli": "~13.3.5",
    "@commitlint/cli": "^17.0.0",
    "@commitlint/config-conventional": "^17.0.0",
    "@playwright/test": "^1.21.1",
    "@types/jest": "^27.4.1",
    "@types/node": "^12.11.1",
    "@typescript-eslint/eslint-plugin": "5.17.0",
    "@typescript-eslint/parser": "5.17.0",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.0",
    "jest": "^27.5.1",
    "jest-preset-angular": "^11.1.2",
    "lint-staged": "^12.4.1",
    "prettier": "^2.6.2",
    "prettier-eslint": "^15.0.0",
    "ts-jest": "^27.1.4",
    "typescript": "~4.6.4"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --cache --fix"
    ],
    "src/**/*.{css,scss,json,js,ts,html}": [
      "prettier ---write --ignore-unknown"
    ]
  }
}
